{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python",
      "config": {
        "excludeFiles": [
          "tests/**", 
          "docs/**", 
          "*.md", 
          "*.log", 
          "node_modules/**", 
          "__pycache__/**",
          "assets/**",   // Exclude any large static files
          "*.csv"        // If you use large data files, you can exclude them
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ]
}
